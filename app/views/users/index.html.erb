<div class="container">
  <%= render "shared/error_messages", object: @new_book %>

  <div class="row">
    <div class="col-md-3">
      <h2 class="mb-3">User info</h2>
      <%= render "shared/user_info_index" %>

      <h2 class="mb-3">New Book</h2>
      <%= render "shared/new_book", new_book: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="mb-3">Users</h2>

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th scope="col"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>