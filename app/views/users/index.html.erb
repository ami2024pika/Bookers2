<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mb-3">User info</h2>

      <%= image_tag current_user.get_profile_image(100, 100) %>

      <table class="table">
        <tbody>
          <tr>
            <th scope="col">name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th scope="col">introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>

      <div class="mb-3">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary col-lg-3" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h2 class="mb-3">New Book</h2>

      <%= form_with model: @new_book do |f| %>
        <div class="form_group mb-3">
          <%= f.label :title, "Title" %><br />
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form_group mb-3">
          <%= f.label :body, "Opinion" %><br />
          <%= f.text_area :body, class: "form-control", rows: "3" %>
        </div>

        <%= f.submit "Create Book", class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="mb-3">Users</h2>

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th scope="col"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>