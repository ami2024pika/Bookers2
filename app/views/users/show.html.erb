<div class="container">
  <%= render "shared/error_messages", object: @new_book %>

  <div class="row">
    <div class="col-md-3">
      <h2 class="mb-3">User info</h2>

      <%= image_tag @user.get_profile_image(100, 100) %>

      <table class="table">
        <tbody>
          <tr>
            <th scope="col">name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th scope="col">introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>

      <div class="mb-3">
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary col-12" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h2 class="mb-3">New Book</h2>
      <%= render "shared/new_book", new_book: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="mb-3">Books</h2>

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(100, 100) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>